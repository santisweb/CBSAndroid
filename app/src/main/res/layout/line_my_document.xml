<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bg">

    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_button_home"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:background="@color/color_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Taxes 2019"
                android:textSize="16sp"
                android:textColor="#383838"
                android:fontFamily="@font/bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_date_upload"
                android:layout_below="@+id/tv_name"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Taxes 2019"
                android:textSize="12sp"
                android:textColor="#8E8E8E"
                android:fontFamily="@font/regular"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:padding="15dp"
                android:id="@+id/img_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_delete"
                android:layout_alignParentEnd="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_download"
                android:layout_below="@+id/tv_date_upload"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="15dp"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/btn_download"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:fontFamily="@font/bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
